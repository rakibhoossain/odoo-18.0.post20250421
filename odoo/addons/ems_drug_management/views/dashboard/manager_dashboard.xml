<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="manager_dashboard" name="Manager Portal">
      <t t-call="web.layout">
          <xpath expr="//head/meta[last()]" position="after">
            <meta name="viewport" content="width=device-width, initial-scale=1"/>
          </xpath>
          <xpath expr="//head/link[last()]" position="after">
            <t t-call-assets="web.assets_frontend" t-js="false"/>
          </xpath>
          <div class="portal-container">
            <div class="portal-header">
                <h1><i class="fas fa-ambulance me-3"/>EMS Software</h1>
                <p class="lead">Select your portal to access the system</p>
            </div>
            <div class="row g-4">

                <!-- Manager Portal Card -->
                <div class="col-md-4">
                    <div class="portal-card">
                        <div class="portal-card-header bg-primary text-white">
                            <h3>Manager Portal</h3>
                        </div>
                        <div class="portal-card-body">
                            <div class="portal-icon text-primary">
                                <i class="fas fa-user-tie"/>
                            </div>
                            <h4>Administration</h4>
                            <p>Manage inventory, generate reports, configure alerts, and oversee station operations.</p>
                            <a href="admin_template/" class="btn btn-primary btn-portal">Enter Portal</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="footer">
                <p>Â© 2025 EMS Software. All rights reserved.</p>
            </div>
          </div>
      </t>
  </template>
</odoo>