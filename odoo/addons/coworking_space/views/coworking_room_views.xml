<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Room Views -->
        <record id="view_coworking_room_tree" model="ir.ui.view">
            <field name="name">coworking.room.tree</field>
            <field name="model">coworking.room</field>
            <field name="arch" type="xml">
                <tree string="Rooms">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="capacity"/>
                    <field name="hourly_rate"/>
                    <field name="total_bookings"/>
                    <field name="utilization_rate"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <record id="view_coworking_room_form" model="ir.ui.view">
            <field name="name">coworking.room.form</field>
            <field name="model">coworking.room</field>
            <field name="arch" type="xml">
                <form string="Room">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_bookings" type="object" class="oe_stat_button" icon="fa-calendar">
                                <field name="total_bookings" widget="statinfo" string="Bookings"/>
                            </button>
                            <button name="action_view_revenue" type="object" class="oe_stat_button" icon="fa-money">
                                <field name="total_revenue" widget="statinfo" string="Revenue"/>
                            </button>
                            <button name="action_view_utilization" type="object" class="oe_stat_button" icon="fa-bar-chart">
                                <field name="utilization_rate" widget="statinfo" string="Utilization %" suffix="%"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Room Name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="capacity"/>
                                <field name="area"/>
                                <field name="floor"/>
                                <field name="location"/>
                            </group>
                        </group>
                        <group string="Pricing">
                            <group>
                                <field name="hourly_rate"/>
                                <field name="daily_rate"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Availability">
                                <group>
                                    <group string="Hours">
                                        <field name="available_from" widget="float_time"/>
                                        <field name="available_to" widget="float_time"/>
                                    </group>
                                    <group string="Days">
                                        <field name="available_days"/>
                                    </group>
                                </group>
                                <group string="Custom Schedule" attrs="{'invisible': [('available_days', '!=', 'custom')]}">
                                    <group>
                                        <field name="monday"/>
                                        <field name="tuesday"/>
                                        <field name="wednesday"/>
                                        <field name="thursday"/>
                                    </group>
                                    <group>
                                        <field name="friday"/>
                                        <field name="saturday"/>
                                        <field name="sunday"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Equipment &amp; Amenities">
                                <group>
                                    <group>
                                        <field name="equipment_ids" widget="many2many_tags"/>
                                    </group>
                                    <group>
                                        <field name="amenity_ids" widget="many2many_tags"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>
                            <page string="Images">
                                <field name="image_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="image" widget="image"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Bookings">
                                <field name="booking_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="start_datetime"/>
                                        <field name="duration"/>
                                        <field name="state"/>
                                        <field name="total_amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_coworking_room_kanban" model="ir.ui.view">
            <field name="name">coworking.room.kanban</field>
            <field name="model">coworking.room</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="capacity"/>
                    <field name="hourly_rate"/>
                    <field name="image"/>
                    <field name="total_bookings"/>
                    <field name="utilization_rate"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('coworking.room', 'image', record.id.raw_value)" alt="Room"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div>Capacity: <field name="capacity"/> people</div>
                                        <div>Rate: â‚¬<field name="hourly_rate"/>/hour</div>
                                        <div>Bookings: <field name="total_bookings"/></div>
                                        <div>Utilization: <field name="utilization_rate"/>%</div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Equipment Views -->
        <record id="view_coworking_equipment_tree" model="ir.ui.view">
            <field name="name">coworking.equipment.tree</field>
            <field name="model">coworking.equipment</field>
            <field name="arch" type="xml">
                <tree string="Equipment" editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="icon"/>
                </tree>
            </field>
        </record>
        
        <record id="view_coworking_equipment_form" model="ir.ui.view">
            <field name="name">coworking.equipment.form</field>
            <field name="model">coworking.equipment</field>
            <field name="arch" type="xml">
                <form string="Equipment">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="icon"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Amenity Views -->
        <record id="view_coworking_amenity_tree" model="ir.ui.view">
            <field name="name">coworking.amenity.tree</field>
            <field name="model">coworking.amenity</field>
            <field name="arch" type="xml">
                <tree string="Amenities" editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="icon"/>
                </tree>
            </field>
        </record>
        
        <record id="view_coworking_amenity_form" model="ir.ui.view">
            <field name="name">coworking.amenity.form</field>
            <field name="model">coworking.amenity</field>
            <field name="arch" type="xml">
                <form string="Amenity">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="icon"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>
